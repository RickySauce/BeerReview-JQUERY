<div data-id="<%=@user.id%>" id="profile">
  <h2><%=@user.username.capitalize%>'s Profile</h2>
  <div>
    <b>Number of Breweries:</b> <%=@user.breweries.count%><br>
    <a href="" data-name="<%=@user.username%>" data-section="breweries" onclick="userShow(event, this)">Show <%=@user.username%>'s breweries</a><br>
    <div id="breweries">
    </div>
  </div>
  <br><br>
  <div>
    <b>Number of Beers:</b> <%=@user.beers.count%><br>
      <a href="" data-name="<%=@user.username%>" data-section="beers" onclick="userShow(event, this)">Show <%=@user.username%>'s beers</a><br>
      <div id="beers">

      </div>
  </div>
  <br><br>
  <div id="reviews">
    <b>Number of Reviews:</b> <%=@user.reviews.count%><br>
    <a href="">Show <%=@user.username%>'s Reviews</a>
  </div>
</div>

<div id="beer_profile">
  <h3><%=@beer.name%></h3>
  <h5>Overall Rating: <%=@beer.rating%></h5>
  <b>Reviews:</b>
  <ul>
    <%@beer.reviews.each do |review|%>
      <b>user:</b> <%=link_to review.user.username, user_path(review.user)%> <br>
      <%= render partial: "reviews/review", locals: {review: review} %>
    <%end%>
  </ul>
</div>

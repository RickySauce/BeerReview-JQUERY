<h3>Brewery List</h3>

<div class="">

  <div id="brewery_list" style="float: left; width: 300px; height:400px;">
    <ul>
      <%@breweries.each do |brewery|%>
        <li id="brewery-<%=brewery.id%>" ><a href="<%brewery_path(brewery)%>" class="brewery_link" data-id="<%=brewery.id%>" data-name="<%=brewery.name%>"><%=brewery.name%></a></li>
      <%end%>
    </ul>
    <button type="button" name="button" onclick="next25()">Show More</button>
    <button type="button" name="button" onclick="showAll()">Show All</button>
  </div>

  <div id="brewery_misc" style="float: left; width: 300px; height:400px;">

  </div>
</div>


<span data-user_id="<%=current_user.id if logged_in?%>"></span>

<script type="text/javascript">
  hide()
  $(document).ready(function() {
    showBeers()
  });
</script>

<div id="edit_review">
  <h2>Edit Review</h2>
  <h4><%=@review.beer.name%></h4>
  <%= form_for @review do |f| %>
  <%=f.hidden_field :user_id%>
  <%=f.hiden_field :beer_id%>
  <b>Taste:</b>
  <%=f.number_field :taste, step: 0.1%> <span id="taste_errors"></span>
  <br><br>
  <b>Look:</b>
  <%=f.number_field :look, step: 0.1%> <span id="look_errors"></span>
  <br><br>
  <b>Smell:</b>
  <%=f.number_field :smell, step: 0.1%><span id="smell_errors"></span>
  <br><br>
  <b>Feel:</b>
  <%=f.number_field :feel, step: 0.1%><span id="feel_errors"></span>
  <br><br>
  <br><br>
  <b>Post:</b><br>
  <%=f.text_area :content, size: "100x20" %>
  <%=f.submit 'Update Review'%>
  <%end%>
</div>

